<%= form_for(@product, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @product.errors.any? %>

      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :category_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :category_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subcategory_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :subcategory_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :private, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :private, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :count, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :count, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_featured, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :is_featured, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_active, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :is_active, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shop_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :shop_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
   <%= f.fields_for :product_images do |p| %>
     <div class="field">
       <%= p.label :image, class: "col-sm-2 control-label" %><br>
       <%= p.file_field :image, :multiple => true, name: "product_images[image][]", class: "form-control"  %>
     </div>
   <% end %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
