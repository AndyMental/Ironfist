<div class="page-header">
  <%= link_to subcategories_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_subcategory_path(@subcategory), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show subcategory</h1>
</div>

<dl class="dl-horizontal">
  <dt>Category:</dt>
  <dd><%= @subcategory.category_id %></dd>

  <dt>Name:</dt>
  <dd><%= @subcategory.name %></dd>

  <dt>Is active:</dt>
  <dd><%= @subcategory.is_active %></dd>

</dl>
