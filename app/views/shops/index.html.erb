<div class="page-header">
  <%= link_to new_shop_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Shop
  <% end %>
  <h1>Listing shops</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Domain</th>
            <th>Theme</th>
            <th>Shop owner</th>
            <th>Is active</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @shops) do |shop| %>
            <td><%= shop.name %></td>
            <td><%= shop.domain %></td>
            <td><%= shop.theme %></td>
            <td><%= shop.shop_owner_id %></td>
            <td><%= shop.is_active %></td>
            <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
