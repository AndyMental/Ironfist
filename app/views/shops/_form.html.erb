<%= form_for(@shop, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @shop.errors.any? %>

      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h4>

      <ul>
      <% @shop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :domain, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :domain, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :theme, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :theme, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shop_owner_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :shop_owner_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_active, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :is_active, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
