<div class="page-header">
  <%= link_to product_reviews_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_product_review_path(@product_review), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show product_review</h1>
</div>

<dl class="dl-horizontal">
  <dt>Content:</dt>
  <dd><%= @product_review.content %></dd>

  <dt>Rating:</dt>
  <dd><%= @product_review.rating %></dd>

  <dt>Product:</dt>
  <dd><%= @product_review.product_id %></dd>

</dl>
