<div class="page-header">
  <%= link_to new_product_review_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Product review
  <% end %>
  <h1>Listing product_reviews</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Content</th>
            <th>Rating</th>
            <th>Product</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @product_reviews) do |product_review| %>
            <td><%= product_review.content %></td>
            <td><%= product_review.rating %></td>
            <td><%= product_review.product_id %></td>
            <td><%= link_to 'Show', product_review %></td>
        <td><%= link_to 'Edit', edit_product_review_path(product_review) %></td>
        <td><%= link_to 'Destroy', product_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
